// imm_gen.sv
// Generador de inmediato (solo para Tipo-I por ahora)
module imm_gen (
    input  logic [31:0] instruction,
    output logic [31:0] imm_out
);

    // Las instrucciones Tipo-I (ALU y Load) usan el mismo formato de inmediato.
    // Se extraen los 12 bits [31:20] y se extienden con el bit [31].
    assign imm_out = {{20{instruction[31]}}, instruction[31:20]};

endmodule