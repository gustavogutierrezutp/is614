`timescale 1ns/1ps

module tb_display;

  // Entradas
  reg [9:0] SW;

  // Salidas
  wire [6:0] HEX0;
  wire [6:0] HEX1;
  wire [6:0] HEX2;

  // Instancia del DUT (Device Under Test)
  display dut (
    .SW(SW),
    .HEX0(HEX0),
    .HEX1(HEX1),
    .HEX2(HEX2)
  );

  initial begin
    // Monitor para ver los cambios
    $monitor("t=%0t | SW=%b | HEX2=%b HEX1=%b HEX0=%b", 
              $time, SW, HEX2, HEX1, HEX0);

    // PRUEBA 1: todos ceros (esperamos 000 en displays)
    SW = 10'b0000000000; #10;

    // PRUEBA 2: valor bajo en HEX0 (ej: 0001)
    SW = 10'b0000000001; #10;

    // PRUEBA 3: mitad encendido (ej: 1111 en HEX0)
    SW = 10'b0000001111; #10;

    // PRUEBA 4: tus 0011111111 (dará HEX2=1, HEX1=F, HEX0=F)
    SW = 10'b0011111111; #10;

    // PRUEBA 5: un valor arbitrario (ej: 1010101010)
    SW = 10'b1010101010; #10;

    // Terminar simulación
    $stop;
  end

endmodule


