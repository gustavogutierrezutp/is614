module tb_top_level;
    reg [9:0] SW;
    wire [9:0] LEDR;
    wire [6:0] HEX0, HEX1, HEX2, HEX3, HEX4, HEX5;
    
    reg [6:0] expected [0:15] = '{
        7'b1000000, 7'b1111001, 7'b0100100, 7'b0110000, // 0,1,2,3
        7'b0011001, 7'b0010010, 7'b0000010, 7'b1111000, // 4,5,6,7
        7'b0000000, 7'b0010000, 7'b0001000, 7'b0000011, // 8,9,A,b
        7'b1000110, 7'b0100001, 7'b0000110, 7'b0001110  // C,d,E,F
    };
    
    top_level dut (.*);
    
    initial begin
        $display("Ejercicio 4.2 - Display Hexadecimal");
        $display("SW[3:0] | Hex | Result");
        
        for (int i = 0; i < 16; i++) begin
            SW = {6'b000000, i[3:0]};
            #10;
            $display("%4b    |  %X  | %s", SW[3:0], i, 
                     (HEX0 == expected[i]) ? "PASS" : "FAIL");
        end
        
        $finish;
    end
endmodule